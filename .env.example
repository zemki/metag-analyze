# -----------------------------------------------------------------------------
# CORE APP SETTINGS
# -----------------------------------------------------------------------------
APP_NAME="Metag Analyze"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Vite environment mode
VITE_ENV_MODE=development

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# Set to true to force all API requests to use V2 format (entity field)
FORCE_API_V2=false
API_V2_CUTOFF_DATE=2025-03-21

# -----------------------------------------------------------------------------
# FIREBASE CONFIGURATION
# -----------------------------------------------------------------------------
# Path to Firebase credentials file (relative to storage/app/)
FIREBASE_CREDENTIALS=
FIREBASE_URL=

# Firebase Cloud Messaging API key for push notifications
FCM_API_KEY=

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_CHANNEL=daily

# -----------------------------------------------------------------------------
# DATABASE - MAIN
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=metagtesting
DB_USERNAME=root
DB_PASSWORD=

# -----------------------------------------------------------------------------
# DATABASE - MART (Separate MART data storage)
# -----------------------------------------------------------------------------
MART_DB_DATABASE=metagtesting_mart

# -----------------------------------------------------------------------------
# CACHING
# -----------------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# MAIL CONFIGURATION
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Maximum number of studies per user
MAX_NUMBER_STUDIES=10

# Admin email for system notifications
LINGUA_ADMIN=

# Comma-separated admin emails
ADMINS=

# Comma-separated blocked IP addresses
BLOCKED_IPS=

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# HMAC key for Altcha human verification
# Generate with: openssl rand -hex 32
ALTCHA_HMAC_KEY=

# -----------------------------------------------------------------------------
# PERFORMANCE
# -----------------------------------------------------------------------------
OPCACHE=true

# -----------------------------------------------------------------------------
# PUSHER (Websockets)
# -----------------------------------------------------------------------------
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
